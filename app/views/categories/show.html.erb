<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @category.name %>
</p>

<%= form_with(model: [ @category, @product ]) do |form| %>
  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <%= form.label :name, "Nombre" %>
        <%= form.text_field :name, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :price, "Precio" %>
        <%= form.text_field :price, :class => 'form-control' %>
      </div>
      <%= form.submit "Guardar", :class => 'btn btn-info' %>
    </div>
  </div>
<% end %>

<br>
<br>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <td scope="col">Nombre</td>
      <td scope="col">Precio</td>
      <td scope="col">Opciones</td>
    </tr>
  </thead>

  <tbody>
    <% @category.products.each do |product| %>
    <tr>
      <td><%=product.name %></td>
      <td><%=product.price %></td>
      <td><%= link_to "Eliminar", category_product_path(@category, product), method: :delete, :class => 'btn btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Editar', edit_category_path(@category) %> |
<%= link_to 'Volver', categories_path %>

<br>
