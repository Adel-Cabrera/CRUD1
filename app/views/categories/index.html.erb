<p id="notice"><%= notice %></p>

<h1>Categorías</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad de Productos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.products.count %></td>
        <td><%= link_to 'Mostrar', category, :class => 'btn btn-success'%></td>
        <td><%= link_to 'Editar', edit_category_path(category), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva categoría', new_category_path %>
